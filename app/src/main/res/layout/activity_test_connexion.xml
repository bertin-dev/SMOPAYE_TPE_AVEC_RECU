<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezpass.smopaye_tpe2.TestConnexion">


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:visibility="visible"
       android:foregroundGravity="center_vertical|center_horizontal">

       <ImageView
           android:id="@+id/conStatusIv"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_action_wifi"
           android:scaleType="fitXY"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:layout_marginTop="10dp"
           android:textColor="@color/bgColorStandard"
           android:textSize="20sp"
           android:layout_marginBottom="20dp"
           android:text="Connexion internet introuvable" />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:paddingRight="10dp"
           android:paddingEnd="10dp"
           android:paddingStart="10dp"
           android:paddingLeft="10dp"
           android:textColor="@color/textColorStandard"
           android:textSize="15sp"
           android:text="Bien vouloir vérifier votre wifi ou activer les données mobiles dans les paramètres de votre appareil." />

       <Button
           android:id="@+id/conStatusBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:textColor="@color/bgColorStandard"
           android:text="REESSAYER"
           android:background="@drawable/edittextborder"
           style="@style/Base.Widget.AppCompat.Button.Colored"
           />


   </LinearLayout>



</LinearLayout>