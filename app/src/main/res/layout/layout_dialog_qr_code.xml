<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
    android:id="@+id/edit_num_carte"
        android:visibility="gone"
        android:textColor="@color/bgColorStandard"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:hint="@string/numCarte"
        android:imeOptions="actionNext"
        android:paddingTop="15dp"
        android:textSize="25sp"
        android:paddingBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:textStyle="bold|italic"
        android:background="@drawable/edittextborder"
        android:layout_width="match_parent"
        android:textColorHint="@color/bgColorStandard"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_montant"
        android:layout_below="@+id/edit_num_carte"
        android:textColor="@color/bgColorStandard"
        android:layout_gravity="center"
        android:hint="@string/montant"
        android:imeOptions="actionNext"
        android:paddingTop="15dp"
        android:textSize="25sp"
        android:paddingBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:textStyle="bold|italic"
        android:background="@drawable/edittextborder"
        android:layout_width="match_parent"
        android:textColorHint="@color/bgColorStandard"
        android:layout_height="wrap_content" />

</RelativeLayout>