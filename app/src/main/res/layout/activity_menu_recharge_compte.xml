<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/menureachargecompte"
    tools:context="com.ezpass.smopaye_tpe2.vuesUtilisateur.MenuRechargeCompte">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnRechargeCompte"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginRight="10dp"
            android:background="@drawable/ripple_effect_click"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorStandard"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="@drawable/edittextborder"
                android:layout_gravity="center_vertical|center_horizontal"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="@string/rechargeMaCarte"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnRechargeAutreCompte"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ripple_effect_click"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorStandard"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="@drawable/edittextborder"
                android:layout_gravity="center_vertical|center_horizontal"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="@string/rechargeUneAutreCarte"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>