            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:weightSum="100"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:paddingStart="15dp"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btnCheckCardNumber"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:padding="5dp"
                            android:background="@drawable/ripple_effect_click"
                            android:src="@drawable/consult_carte_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#262626"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="@string/verification"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnRechargeAvecCashAdmin"
                        android:focusable="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:padding="5dp"
                            android:background="@drawable/ripple_effect_click"
                            android:src="@drawable/recharge_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#262626"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="@string/rechargeComptes"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/btnGesCompt"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/ripple_effect_click"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:padding="5dp"
                            android:src="@drawable/gestion_compte"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#262626"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="@string/gesComptes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnConsulterSolde"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                         <ImageView
                             android:layout_width="150dp"
                             android:layout_height="120dp"
                             android:padding="5dp"
                             android:background="@drawable/ripple_effect_click"
                             android:src="@drawable/solde_carte1_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#262626"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="@string/consulterSolde"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


     <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:fabSize="normal"
        app:backgroundTint="@color/bgColorStandard"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_add_black_24dp" />


</android.support.design.widget.CoordinatorLayout>