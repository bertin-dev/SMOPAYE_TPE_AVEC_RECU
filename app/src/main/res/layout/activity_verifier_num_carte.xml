<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/verifierNumCarte"
    android:background="@color/white"
    tools:context="com.ezpass.smopaye_tpe2.vuesAccepteur.VerifierNumCarte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#FFF"
        android:textAlignment="center"
        android:foregroundGravity="center_horizontal|center_vertical"
        android:layout_gravity="top">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top"
            android:foregroundGravity="top"
            app:cardCornerRadius="4dp"
            app:elevation="30dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="55"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:textStyle="italic|bold"
                        android:textAlignment="gravity"
                        android:textColor="@color/bgColorStandard"
                        android:text="@string/MsgDescVerifierNumCarte"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:focusable="true"
            android:layout_marginTop="100dp"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/afficheNumCarte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/votreNumCarte"/>

                    <EditText
                        android:id="@+id/id_carte"
                        android:textColor="@color/bgColorStandard"
                        android:layout_gravity="center"
                        android:hint="@string/numCarte"
                        android:imeOptions="actionNext"
                        android:padding="15dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:inputType="text"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="@drawable/edittextbg"
                        android:layout_width="match_parent"
                        android:textColorHint="#000"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/VotreAbonnement"/>

                    <EditText
                        android:id="@+id/valeurAbonnement"
                        android:textColor="@color/bgColorStandard"
                        android:layout_gravity="center"
                        android:hint="service"
                        android:imeOptions="actionNext"
                        android:padding="15dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:inputType="text"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="@drawable/edittextbg"
                        android:layout_width="match_parent"
                        android:textColorHint="#000"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/dateExp"/>

                    <EditText
                        android:id="@+id/dateExpi"
                        android:textColor="@color/bgColorStandard"
                        android:layout_gravity="center"
                        android:hint="28 Avril 2020"
                        android:imeOptions="actionNext"
                        android:padding="15dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:inputType="datetime"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="@drawable/edittextbg"
                        android:layout_width="match_parent"
                        android:textColorHint="#000"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/Btn_id_carte"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:textStyle="bold"
                    android:shadowDx="@android:integer/config_longAnimTime"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/passerCarte" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/pbLoader"
                    android:visibility="invisible"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>